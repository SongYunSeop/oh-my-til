{
	"name": "obsidian-claude-til",
	"version": "0.4.0",
	"description": "Obsidian plugin with embedded Claude Code terminal for TIL learning workflow",
	"main": "main.js",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "node esbuild.config.mjs production",
		"rebuild-pty": "npx @electron/rebuild -m node_modules/node-pty -v ${ELECTRON_VERSION:?'ELECTRON_VERSION 환경변수를 설정하세요 (예: ELECTRON_VERSION=37.10.2 npm run rebuild-pty)'}",
		"deploy": "bash scripts/deploy.sh",
		"check": "vitest run && node esbuild.config.mjs production && tsc --noEmit",
		"test": "vitest run"
	},
	"keywords": [
		"obsidian",
		"obsidian-plugin",
		"claude",
		"claude-code",
		"til",
		"learning",
		"mcp",
		"terminal"
	],
	"author": "SongYunSeop",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/SongYunSeop/obsidian-claude-til.git"
	},
	"homepage": "https://github.com/SongYunSeop/obsidian-claude-til",
	"bugs": {
		"url": "https://github.com/SongYunSeop/obsidian-claude-til/issues"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.26.0",
		"@xterm/addon-fit": "^0.10.0",
		"@xterm/xterm": "^5.5.0",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@electron/rebuild": "^3.6.0",
		"@types/node": "^20.0.0",
		"builtin-modules": "^3.3.0",
		"esbuild": "^0.20.0",
		"node-pty": "^1.0.0",
		"obsidian": "^1.5.0",
		"typescript": "^5.0.0",
		"vitest": "^4.0.18"
	}
}
